<!DOCTYPE html>
<html>
<head>
    <title>Airbnb Clone</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<h1>🏠 Airbnb-like Listings</h1>
<a href="/add" class="btn">+ Add Property</a>
<div class="grid">
    <% properties.forEach(p => { %>
        <div class="card">
            <img src="<%= p.image_url %>" alt="<%= p.title %>">
            <h2><%= p.title %></h2>
            <p><%= p.location %></p>
            <p>₹<%= p.price %> / night</p>
            <a href="/property/<%= p.id %>" class="btn">View Details</a>
        </div>
    <% }) %>
</div>
</body>
</html>
